    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch client",
            "type": "lua",
            "request": "launch",
            "stopOnEntry": false,
            "luadll" : "${workspaceRoot}/sanguo.win32/Debug/lua53.dll",
            "runtimeExecutable": "${workspaceRoot}/sanguo.win32/Debug/client.exe",
            "runtimeArgs":["${workspaceRoot}"],
            "consoleCoding": "utf8",
            "console":"externalTerminal",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "launch process",
            "type": "lua",
            "request": "launch",
            "stopOnEntry": false,
            "cwd":"${workspaceFolder}",
            "luadll" : "${workspaceRoot}/sanguo.win32/Debug/lua53.dll",
            "runtimeExecutable": "${workspaceRoot}/sanguo.win32/Debug/sanguo.exe",
            "consoleCoding": "utf8",
            "console":"integratedTerminal",
            "runtimeArgs":["${workspaceRoot}"],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}